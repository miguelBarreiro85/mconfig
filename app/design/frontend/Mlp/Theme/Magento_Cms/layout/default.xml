<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.gif</argument>
                <argument name="logo_width" xsi:type="number">300</argument>
                <argument name="logo_height" xsi:type="number">60</argument>
                <argument name="logo_alt" xsi:type="string">MLP BARREIRO LDA</argument>
            </arguments>
        </referenceBlock>
        
        <referenceBlock name="footer_links" remove="true" />
        
        <referenceContainer name="footer">
            <container name="contacts_footer_container" label="Contact Footer Container" htmlTag="div" htmlClass="mlp_contact_links" before="-"/>
          
            <container name="links_uteis_container" label="Links Uteis Footer" htmlTag="div" htmlClass="mlp_links" after="services_footer_links_container"/>
            <container name="mlp_horario_container" htmlTag="div" htmlClass="horario" after="-">
                <block class="Magento\Framework\View\Element\Text" name="footer.horario" >
                    <arguments>
                        <argument name="text" xsi:type="string">Estamos abertos de Segunda a Sábado das 09:30 às 13:00 e das 14:30 às 19:00</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <referenceContainer name="contacts_footer_container">
            <block class="Magento\Framework\View\Element\Template" name="footer_links_contact" template="Magento_Theme::footer_contacts.phtml" />
        </referenceContainer>

        
            
        

        <referenceContainer name="links_uteis_container">
            <container name="footer_links_title_container" htmlTag="div" htmlClass="footer-title" before="-">
                <block class="Magento\Framework\View\Element\Text" name="footer.links.title" >
                        <arguments>
                            <argument name="text" xsi:type="string">Links úteis</argument>
                        </arguments>
                </block>
            </container>
            <block class="Magento\Framework\View\Element\Html\Links" name="footer_links_cms">
                <arguments>
                    <argument name="css_class" xsi:type="string">footer links</argument>
                </arguments>    
            </block>
        </referenceContainer>

        <referenceBlock name="footer_links_cms">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="privacy-policy-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Privacy and Cookie Policy</argument>
                    <argument name="path" xsi:type="string">privacy-policy-cookie-restriction-mode</argument>
                </arguments>
            </block>
                        <block class="Magento\Framework\View\Element\Html\Link\Current" name="entregas-servicos">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Entregas e instalações</argument>
                    <argument name="path" xsi:type="string">entrega-e-servicos</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="termos-e-condicoes">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Termos e condições</argument>
                    <argument name="path" xsi:type="string">termos</argument>
                </arguments>
            </block>

            <block class="Magento\Framework\View\Element\Html\Link\Current" name="sobre-nos">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Sobre nós</argument>
                    <argument name="path" xsi:type="string">sobre-nos</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom-footer-link">
            <arguments>
                <argument name="label" xsi:type="string">Livro de reclamações</argument>
                <argument name="path" xsi:type="string">https://www.livroreclamacoes.pt/inicio</argument>
            </arguments>
            </block>
        </referenceBlock>
    </body>
</page>