<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer">
            <container name="cms_footer_links_container" label="CMS Footer Links" htmlTag="div" htmlClass="links" before="footer_links" />
        </referenceContainer>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="privacy-policy-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Privacy and Cookie Policy</argument>
                    <argument name="path" xsi:type="string">privacy-policy-cookie-restriction-mode</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="termos-e-condicoes">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Termos e condições</argument>
                    <argument name="path" xsi:type="string">termos</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="contactos">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Contactos</argument>
                    <argument name="path" xsi:type="string">contactos</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="sobre-nos">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Sobre nós</argument>
                    <argument name="path" xsi:type="string">sobre-nos</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="entregas-servicos">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Entregas e serviços</argument>
                    <argument name="path" xsi:type="string">entrega-e-servicos</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
